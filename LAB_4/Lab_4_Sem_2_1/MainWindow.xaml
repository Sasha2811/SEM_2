<Window x:Class="Lab_4_Sem_2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_4_Sem_2_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="386">
    <Grid>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="24,82,0,0" VerticalAlignment="Top" Width="148">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFD47425" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="24,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="23" Background="#FFDE5858"/>
        <Button x:Name="button1" Content="Add" HorizontalAlignment="Left" Margin="248,36,0,0" VerticalAlignment="Top" Click="button1_Click"/>
        <Button x:Name="button2" Content="Remove" HorizontalAlignment="Left" Margin="314,36,0,0" VerticalAlignment="Top" Click="button2_Click"/>
    </Grid>
</Window>
